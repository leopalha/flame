# ============================================
# FLAME Lounge Bar - Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# ============================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:7000/api

# Socket.IO Configuration
NEXT_PUBLIC_SOCKET_URL=http://localhost:7000

# Google OAuth 2.0 Configuration (Client ID only - public)
# Get from: https://console.cloud.google.com
# Must match the backend GOOGLE_CLIENT_ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Stripe Configuration (Public Key only)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Web Push Configuration (VAPID Public Key only)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# Google Maps (Optional - for delivery)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Feature Flags
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DELIVERY=false
NEXT_PUBLIC_ENABLE_RESERVATIONS=true
NEXT_PUBLIC_ENABLE_HOOKAH=true

# App Configuration
NEXT_PUBLIC_APP_NAME=FLAME Lounge Bar
NEXT_PUBLIC_APP_DESCRIPTION=Gastronomia, Drinks & Narguile
NEXT_PUBLIC_APP_URL=https://flamelounge.com.br

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=flame
